{
  "name": "autoquery",
  "publisher": "JuanFigueroa",
  "icon": "src/autoQueryLogo.jpg",
  "repository": {
      "type": "git",
      "url": "https://github.com/juancrfig/autoQuery.git"
    },
  "displayName": "autoQuery",
  "description": "Automatically generate JavaScript querySelector variables for HTML elements in your project. Stop typing selectors manually!",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.86.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand: autoquery.query"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoquery.welcomeMessage",
        "title": "Welcome"
      },
      {
        "command": "autoquery.runQuery",
        "title": "Query Element"
      }
    ],
    "keybindings": [
      {
        "command": "autoquery.runQuery",
        "key": "ctrl+shift+q",
        "mac": "cmd+q"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
